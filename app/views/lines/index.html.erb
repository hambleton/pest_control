<h1>Listing lines</h1>

<table>
  <tr>
    <th>Short name</th>
    <th>Name</th>
    <th>No of stations</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lines.each do |line| %>
  <tr>
    <td><%= line.short_name %></td>
    <td><%= line.name %></td>
    <td><%= line.no_of_stations %></td>
    <td><%= line.user_id %></td>
    <td><%= link_to 'Show', line %></td>
    <td><%= link_to 'Edit', edit_line_path(line) %></td>
    <td><%= link_to 'Destroy', line, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

