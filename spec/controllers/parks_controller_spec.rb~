describe ParksController do

  def mock_park(stubs={})
    @mock_park ||= mock_model(Park, stubs).as_null_object
  end

  describe "GET index" do
    it "assigns all parks as @parks" do
      Park.stub(:all) { [mock_park] }
      get :index
      assigns(:parks).should eq([mock_park])
    end
  end

  describe "GET show" do
    it "assigns the requested park as @park" do
      Park.stub(:find).with("37") { mock_park }
