      assigns(:park).should be(mock_park)
    end
  end

  describe "POST create" do
    describe "with valid params" do
      it "assigns a newly created park as @park" do
        Park.stub(:new).with({'these' => 'params'}) { mock_park(:save => true) }
        post :create, :park => {'these' => 'params'}
        assigns(:park).should be(mock_park)
      end

      it "redirects to the created park" do
        Park.stub(:new) { mock_park(:save => true) }
        post :create, :park => {}
        response.should redirect_to(park_url(mock_park))
      end
    end

    describe "with invalid params" do
      it "assigns a newly created but unsaved park as @park" do
        Park.stub(:new).with({'these' => 'params'}) { mock_park(:save => false) }
        post :create, :park => {'these' => 'params'}
        assigns(:park).should be(mock_park)
      end

      it "re-renders the 'new' template" do
        Park.stub(:new) { mock_park(:save => false) }
        post :create, :park => {}
        response.should render_template("new")
      end
    end
  end

  describe "PUT update" do
    describe "with valid params" do
      it "updates the requested park" do
        Park.stub(:find).with("37") { mock_park }
        mock_park.should_receive(:update_attributes).with({'these' => 'params'})
        put :update, :id => "37", :park => {'these' => 'params'}
      end

      it "assigns the requested park as @park" do
        Park.stub(:find) { mock_park(:update_attributes => true) }
        put :update, :id => "1"
        assigns(:park).should be(mock_park)
      end

      it "redirects to the park" do
        Park.stub(:find) { mock_park(:update_attributes => true) }
